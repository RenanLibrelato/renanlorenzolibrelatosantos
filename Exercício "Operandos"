<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <title>Operandos</title>
</head>
<body>
    <script>
        var numero= Number.parseInt (window.prompt("Digite um Número:"))
        document.write('Seu número:', numero, '<br>')

        var numero1= Number.parseInt (window.prompt("Digite seu Número:"))
        document.write('Seu número:', numero1, '<br>')

        soma=numero+numero1
        document.write('Soma:',soma, '<br>')

        subtração= numero-numero1
        document.write('Subtração:', subtração, '<br>')

        divisão= numero/numero1
        document.write('Divisão:', divisão, '<br>')

        resto= numero%numero1
        document.write('Resto:', resto, '<br>')
    </script>
</body>
</html>
